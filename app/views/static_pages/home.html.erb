<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <div class="well">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
    </aside>
    <div class="span8">
      <h3>Donut Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Donut Heights</h1>

    <h2>
      For droogs. By droogs. From droogs.
    </h2>

    <%= link_to "Sign up", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>